<div class="col-md-4 mb-2">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title text-center text-capitalize">{{ product.title }}</h3>
        </div>
        <img class="card-img-top" src="{{ product.coverImage }}" alt="Card image cap">
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p class="card-text">{{ product.description }}</p>
                <footer class="blockquote-footer">Catégorie : {{ product.category.name }}</footer>
            </blockquote>
            <div class="d-flex justify-content-around py-3">
                <p class="card-text font-weight-bold">{{ product.price }}€</p>
            </div>
        </div>
    </div>
</div>