{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row align-items-center mb-5">
            <div class="col-3 text-center">
                <img src="{{ user.picture }}" class="avatar mb-3" alt="avatar de {{ user.fullName }}">
                <br>
                <span class="badge badge-primary">{{ user.products | length }} jeux</span>
            </div>
            <div class="col-9">
                <h1>{{ user.fullName }}</h1>
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
                        <a href="{{ path('account_password') }}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
                    </div>
                {% endif %}
            </div>
        </div>

        {{ user.description | raw }}
        <hr>
        <h2 class="my-5">Les jeux de {{ user.fullName }}</h2>

        {% if user.products | length > 0 %}
            <div class="row">
                {% for product in user.products %}
                    {% include 'product/_product.html.twig' %}
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning">
                <p>
                    <strong>{{ user.fullName }} n'a pas encore mit de jeu sur ce site</strong>
                </p>
            </div>
        {% endif %}
    </div>
{% endblock %}
