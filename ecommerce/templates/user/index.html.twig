{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row align-items-center mb-5">
            <div class="col-3 text-center">
                <img src="{{ user.picture }}" class="avatar mb-3" alt="avatar de {{ user.fullName }}">
            </div>
            <div class="col-9">
                <h1>{{ user.fullName }}</h1>
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profile') }}" class="btn btn-outline-primary mr-2 mb-2">
                            <i class="fas fa-user-circle mr-2"></i>
                            Modifier mes informations
                        </a>
                        <a href="{{ path('account_password') }}" class="btn btn-outline-primary mr-2 mb-2">
                            <i class="fas fa-lock mr-2"></i>
                            Modifier mon mot de passe</a>
                        <a href="{{ path('account_restock') }}" class="btn btn-outline-primary mb-2">
                            <i class="fas fa-euro-sign mr-2"></i>
                            RÃ©approvisionner mon compte
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
        <h4>Introduction</h4>
        <p>
            {{ user.introduction | raw }}
        </p>
        <hr>
        <h4>Votre description</h4>
        <p>
            {{ user.description | raw }}
        </p>
        <hr>

    </div>
{% endblock %}
