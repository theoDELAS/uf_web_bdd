{% extends 'admin/base.html.twig' %}

{% block title %}Création d'une plateforme{% endblock %}

{% block body %}
    <div class="container alert alert-light">
        <h1 class="my-5">Créer une nouvelle annonce</h1>

        {{ form_start(form) }}

        {{ form_row(form.name) }}

        <div>
            <h2 class="alert-heading">Sauvegarder la nouvelle plateforme</h2>
            <p>Vous êtes sur le point de créer votre plateforme.</p>
            <button type="submit" class="btn btn-primary float-right">
                <i class="fas fa-check"></i>
                Créer</button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/ad.js"></script>
{% endblock %}
