{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'annonce numéro {{ product.id }}{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">

        <div class="container">
            <h1 class="my-5">Modification de l'annonce <em>{{ product.title }}</em></h1>

            {{ form_start(form) }}

            <div class="row">
                <div class="col">
                    <div class="alert alert-light">
                        <h2>Informations générales</h2>
                        <hr>
                        <div class="mb-4">
                            {{ form_widget(form.title) }}
                        </div>
                        <div class="mb-4">
                            {{ form_widget(form.price) }}
                        </div>
                        <div class="mb-4">
                            {{ form_widget(form.category) }}
                        </div>
                    </div>
                    <div class="alert alert-light">
                        <h2>Détails concernant le jeu</h2>
                        <hr>
                        {{ form_widget(form.description) }}
                    </div>
                </div>
                <div class="col">
                    <div class="alert alert-light">
                        <h2>Plateforme de jeu</h2>
                        <hr>
                        {{ form_widget(form.platforms) }}
                    </div>
                    <div class="alert alert-light">
                        <h2>Image du jeu</h2>
                        <hr>
                        {{ form_widget(form.coverImage) }}
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i>
                        Enregistrer les modifications
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
