{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'annonce num√©ro {{ product.id }}{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modification de l'annonce <em>{{ product.title }}</em></h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">Corriger l'annonce?</h4>
                    </div>
                    <div class="card-body">
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check"></i>
                            Enregistrer les modifications
                        </button>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
