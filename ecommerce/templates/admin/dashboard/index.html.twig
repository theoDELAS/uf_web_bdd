{% extends '/admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="container-fluid my-5">
        <div class="row">
            <div class="col-md-6 col-lg-4">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-9">
                                <h4 class="card-title">{{ stats.users }} utilisateurs</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card text-white bg-dark mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-gamepad fa-3x"></i>
                            </div>
                            <div class="col-9">
                                <h4 class="card-title">{{ stats.products }} jeux en vente</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card text-white bg-secondary mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-9">
                                <h4 class="card-title">{{ stats.comments }} avis</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-xl-3">
                <div class="card text-white bg-danger mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fab fa-playstation fa-3x"></i>
                            </div>
                            <div class="col-9">
                                <h4 class="card-title">{{ stats.ps4 }} jeux PS4 en vente</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-xl-3">
                <div class="card text-white bg-success mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fab fa-xbox fa-3x"></i>
                            </div>
                            <div class="col-9">
                                <h4 class="card-title">{{ stats.ps4 }} jeux XBOX en vente</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-xl-3">
                <div class="card text-white bg-warning mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-laptop fa-3x"></i>
                            </div>
                            <div class="col-9">
                                <h4 class="card-title">{{ stats.ps4 }} jeux PC en vente</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-xl-3">
                <div class="card text-white bg-info mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-gamepad fa-3x"></i>
                            </div>
                            <div class="col-9">
                                <h4 class="card-title">{{ stats.ps4 }} jeux Stadia en vente</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-up"></i> Les jeux les mieux notés</h2>

                    <table class="table table-hover text-white">
                        <thead>
                        <tr>
                            <th>Jeu</th>
                            <th class="text-center">Moyenne</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in bestProducts %}
                            <tr>
                                <td>{{product.title}}</td>
                                <td class="text-center">
                                    <span class="badge badge-dark">
                                        {{product.note | number_format(1, ",", " ")}}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-down"></i> Les jeux les moins bien notés</h2>

                    <table class="table table-hover text-white">
                        <thead>
                        <tr>
                            <th>Jeu</th>
                            <th class="text-center">Moyenne</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in worstProducts %}
                            <tr>
                                <td>{{product.title}}</td>
                                <td class="text-center">
                                    <span class="badge badge-dark">
                                        {{product.note | number_format(1, ",", " ")}}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
